{
	"name": "Wompt Chat",
	"version": "0.1.4",
	"description": "Wompt brings chat to all your favorite sites.",
	"icons": {
		"16":  "wompt_16.png",
		"48":  "wompt_48.png",
		"128": "wompt_128.png"
	},
	"content_scripts": [{
		"matches": [
			"http://news.ycombinator.com/",
			"http://news.ycombinator.com/news",
			"http://news.ycombinator.com/newest",
			"http://news.ycombinator.com/newcomments",
			"http://news.ycombinator.com/ask",
			"http://news.ycombinator.com/x*",
			"http://news.ycombinator.com/item*"],
		"js": [
			"wompt.js",
			"common/util.js",
			"common/create.js",
			"hacker_news/links_and_iframes.js"
		]
	},{
		"matches": [
			"http://www.reddit.com/",
			"http://www.reddit.com/?*",
			"http://www.reddit.com/domain/*",
			"http://www.reddit.com/r/*"],
		"js": [
			"wompt.js",
			"common/util.js",
			"common/create.js",
			"reddit/links_and_iframes.js"
		]
	},{
		"matches": [
			"https://github.com/*"],
		"js": [
			"wompt.js",
			"common/util.js",
			"common/create.js",
			"github/links_and_iframes.js"
		]
	}],
	"permissions": [
		"http://news.ycombinator.com/",
		"http://www.reddit.com/",
		"https://github.com/"
	]
}
